{{>layout/header}}
{{#post}}
<main>
    <div class="container">
        <div class="col s12 m8 offset-m2 l6 offset-l3">
            <div class="row valign-wrapper">
                <div class="col s2">
                    <img src="img/{{title}}.png" alt="" class="responsive-img">
                </div>
                <div class="col s10">
                    <span class="black-text"><h2>{{title}}</h2></span>
                </div>
            </div>
        </div>


        <span class="cyan-text text-darken-2"><h4>Concept</h4></span>
        <p class="flow-text">
            {{content}}
        </p>
        <a class="orange-text text-darken-2" href="{{url1}}"><h4>Learn More</h4></a>
        <a class="orange-text text-darken-2" href="{{url2}}"><h4>Start Experience</h4></a><br>

    </div>
</main>
{{/post}}
{{>layout/footer}}