{{>layout/header}}

<main>
    <div class="container">

        <div class="col s12 m8 offset-m2 l6 offset-l3">
            <div class="row valign-wrapper">
                <div class="col s2">
                    <img src="img/sangsang5.png" alt="" class="responsive-img">
                </div>
                <div class="col s10">
                    <span class="black-text"><h2>AWS 기능 추가</h2></span>
                </div>
            </div>
        </div>

        <div class="row">
            <form class="col s12">
                <div class="row">
                    <span class="cyan-text text-darken-2"><h6>Title</h6></span>
                    <div class="input-field col s6">
                        <input id="title" type="text" class="validate" placeholder="기능 이름">
                        <label for="title"></label>
                    </div>
                </div>
                <div class="row">
                    <span class="cyan-text text-darken-2"><h6>content</h6></span>
                    <div class="input-field col s12">
                        <textarea id="content" class="materialize-textarea" placeholder="기능 설명"></textarea>
                        <label for="content"></label>
                    </div>
                </div>
                <div class="row">
                    <span class="cyan-text text-darken-2"><h6>URL</h6></span>
                    <div class="input-field col s6">
                        <input id="url1" type="text" class="validate" placeholder="추가 링크1">
                        <label for="url1"></label>
                    </div>
                    <div class="input-field col s6">
                        <input id="url2" type="text" class="validate" placeholder="추가 링크2">
                        <label for="url2"></label>
                    </div>
                </div>
            </form>
        </div>

        <a href="/" class="waves-effect waves-light btn">취소</a>
        <button type="button" class="waves-effect waves-light btn" id="btn-add">등록</button>
        <br><br>

    </div>
</main>

{{>layout/footer}}